{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "module": "Node16",
      "moduleResolution": "node16",
      "noImplicitAny": true,
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "target": "es2020",
      "pretty": true
    },
    "ts-node": {
      "compilerOptions": {
        "module": "commonjs"
      }
    },
    "exclude": [
      "dist",
      "node_modules",
      "vitest.config.ts",
      "**/*.test.ts",
      "**/example.ts"
    ]
    
  }