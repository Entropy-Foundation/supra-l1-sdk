{
    "compilerOptions": {
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "target": "ES2020",
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./dist/cjs",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "types": ["node", "vitest"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "vitest.config.ts", "src/example.ts"]
  }
  